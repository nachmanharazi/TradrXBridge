{
  "name": "tradrxbridge",
  "version": "2.0.0",
  "description": "Professional trading bridge platform for seamless cryptocurrency and forex trading across multiple exchanges",
  "main": "index.html",
  "scripts": {
    "start": "live-server --port=3000 --open=/",
    "dev": "live-server --port=3000 --open=/ --watch=.",
    "build": "npm run minify-css && npm run minify-js",
    "minify-css": "cleancss -o dist/styles.min.css styles.css",
    "minify-js": "terser script.js -o dist/script.min.js --compress --mangle",
    "lint": "eslint script.js",
    "lint:fix": "eslint script.js --fix",
    "format": "prettier --write *.html *.css *.js",
    "test": "echo \"No tests specified yet\" && exit 0"
  },
  "keywords": [
    "trading",
    "cryptocurrency",
    "forex",
    "bridge",
    "exchange",
    "portfolio",
    "fintech"
  ],
  "author": "TradrXBridge Team",
  "license": "MIT",
  "devDependencies": {
    "live-server": "^1.2.2",
    "clean-css-cli": "^5.6.3",
    "terser": "^5.36.0",
    "eslint": "^9.15.0",
    "prettier": "^3.4.2",
    "@eslint/js": "^9.15.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/tradrxbridge.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/tradrxbridge/issues"
  },
  "homepage": "https://your-username.github.io/tradrxbridge",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  }
}
